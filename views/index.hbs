          <a href="#" class="col-12 col-md-auto flex-fill navbar-button navbar-button-download-cv d-flex justify-content-center align-items-center gap-2 text-decoration-none rounded-2 px-2 py-2">
            <i class="fa-solid fa-download"></i>
            <span class="navbar-button-text">Download CV</span>
          </a>
          {{#if email}}
            {{!-- <a href="#" class="col-12 col-md-auto flex-fill outline-button navbar-button-login d-flex justify-content-center align-items-center gap-2 text-decoration-none rounded-2 px-3 py-2">
